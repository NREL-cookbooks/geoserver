upstream geoserver_backend {
  server 127.0.0.1:8080;
  keepalive 10;
}

server {
  listen <%= node[:geoserver][:nginx][:port] %> default_server;
  server_name _;

  <% if node[:geoserver][:nginx][:ssl] %>
  listen 443 ssl default_server;
  ssl_certificate <%= node[:geoserver][:nginx][:ssl_certificate] %>;
  ssl_certificate_key <%= node[:geoserver][:nginx][:ssl_certificate_key] %>;
  <% end %>

  rewrite ^/$ /geoserver/ redirect;

  location /geoserver {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header Host $http_host;
    proxy_http_version 1.1;
    proxy_set_header Connection "";

    proxy_pass http://geoserver_backend;
  }
}
